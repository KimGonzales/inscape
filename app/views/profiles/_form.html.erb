<%= simple_form_for @profile do |f| %>

	<% if @profile.errors.any? %>
		<h2 id="form-group"><%= pluralize(@profile.errors.count, "error")%> prevented this Photo from saving</h2>
		<ul>
			<% @profile.errors.full_messages.each do | msg | %>
			<li><%= msg %> </li>
			<% end %>
		</ul>
	<% end %>

	<%= f.input :bio, input_html: { class: 'form-control'} %>

  <section class="main">
    <label>Featured Profile Photos</label>
      <%= f.simple_fields_for :photos do | ff |%>
       <%= ff.check_box :featured_status %>
        <label><%= ff.object.myPhoto %></label>
      <% end %>
	</section>
  
  <%= f.button :submit, value: "Update Bio", class: 'btn btn-info'%>
<% end %>

