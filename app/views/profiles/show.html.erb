<div class="page-header">
  <h3><%= @profile.user.username %><br>

    <% if current_user.profile == @profile %>
        <button type="button" class="btn btn-secondary btn-xs"><%= link_to "Edit Bio", edit_profile_path %></button>
    <% end %><br>

      <small><%= @profile.bio %></small><br>
      
      <button type="button" class="btn btn-secondary btn-xs"><a href="#" class="js-get-photos" data-id="<%=@profile.id%>">All Photos</a></button>
  </h3>
</div>

<div class="col-md-12">
  <div class="rtl transitions-enabled photos">

    <h5>Featured Photos</h5>
    <% @photos.each do |photo| %>
      <% if photo.featured? %>
        <div class="box panel panel-default">
          <%= link_to (image_tag photo.image.url), photo_path(photo) %>
          <h2><%= link_to photo.title, photo %></h2>
          <p><%= photo_date(photo) %></p>
        </div>
      <% end %>
    <% end %>

  </div>
</div >

<div class="all-photos">
</div>
