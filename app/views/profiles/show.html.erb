<% if current_user.profile == @profile && @profile.photos.empty? %>
	<h3> <%= link_to "Add the first photo to your profile!", new_profile_photo_path(@profile)%> </h3>
<% end%>

<div class="page-header">
	<h3><%= @profile.user.username %><br>
		<% if current_user.profile == @profile %>
			<small><%= @profile.bio %></small><br>
			<button type="button" class="btn btn-secondary btn-sm"><%= link_to "Edit Bio", edit_profile_path %></button>
		<% else %>
			<small><%= @profile.bio %></small><br>
		<% end %>
	</h3>
</div>

<div class="col-md-12">
	<div id="photos" class="rtl">

		<% @photos.each do |photo| %>
			<div class="box panel panel-default">
				<%= link_to (image_tag photo.image.url), photo %>
				<h2><%= link_to photo.title, photo %></h2>
				<p><%= time_ago_in_words(photo.created_at)%> ago</p>
			</div>
		<% end %>

	</div>
</div >
